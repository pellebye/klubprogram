package common.out.info;

import org.eclipse.swt.SWT;

import common.LocalMethods;
import common.log.CommonLog;

public class InfoUnexpectedError {

	// ---------------------------------------------------------------------------------------------
	// CONSTRUCTOR
	// ---------------------------------------------------------------------------------------------
	public InfoUnexpectedError(String line) {
		CommonLog.logger.info("heading//");

		String heading = "Fejl! i kommentarfeltet.";
		String text = "Ret i kommentarfeltet: " + line + " ... og k√∏r programmet igen.";
		LocalMethods.methodShowMessage(heading, text, SWT.ICON_ERROR | SWT.OK);
		System.exit(0);
	}
}
